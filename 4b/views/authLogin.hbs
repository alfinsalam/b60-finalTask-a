{{#> layout currentPage="Login"}}
    <div class="container-fluid login-container">
        <div class="left-side">
            <img src="/assets/img/logodw.png" alt="Dumbways Logo">
        </div>
        <div class="right-side">
            <h2 class="text-center">Lets Login! <br> Manage Your Hero :)</h2>
            <form id="registForm" action="/login" method="post" class="mt-4">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>

                {{#if messages.error}}
                <div class="alert alert-danger" role="alert">
                    {{messages.error}}
                </div>
                {{/if}}

                {{#if messages.success}}
                <div class="alert alert-success" role="alert">
                    {{messages.success}}
                </div>
                {{/if}}

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <div class="text-center mt-3">
                <span>or</span>
            </div>
            <a href="/register" class="btn btn-outline-primary w-100 mt-2">Register</a>
        </div>
    </div>
{{/layout}}